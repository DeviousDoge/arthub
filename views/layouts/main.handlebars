        <div class="d-flex justify-content-end">
        <button type="button" class="m-1 btn btn-primary" id="upload">Upload</button>
        <br>
        {{!-- <button class="no-button" id="logout">logout</button> --}}
        <button type="button" class="m-1 btn btn-primary" id="logout">Logout</button>
        {{else}}
        <a href="/login">login</a>
        </div>
        {{/if}}   
      </button>
    </div>
    
  </div>
  
</header>
 <br>

  <main>
    <div class="gallery">
      {{{body}}}
    </div>
